<body>

<h2>러브라인?</h2>

  <div id="div1">
  <ul>
  <li id="li3">바보</li>
  <li id="li4">온달</li>
  <ul>
  <li id="li5">멋진가</li>
  </ul>
  </ul>
  </div>

<script src="./js/jquery-3.4.1.js" type="text/javascript">
$(function(){
	$("div").filter("#div1").text("바보온달의 러브라인...."); //set innerText
	//div태그안에서 div1 id를 찾아 그 내용을 변경
	
	$("div").find("#li3").text("평강공주");
	//바보에 //div태그중 child가 li3인 내용 변경
	
	$("div").find("#li4").html("<h3>바보온달</h3>");
	
	$("div").find("#li5").text("결혼한대");
});
</script>
</body>
